<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.eplant.azureeepc.eplant.consult"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:paddingTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:gravity="top"
        android:id="@+id/dd"
        android:weightSum="1"
        android:paddingBottom="0dp"
        android:baselineAligned="false"
        android:background="@drawable/forita">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="The problem your having?"
            android:textSize="15dp"
            android:textColor="@color/total_theme"
            android:editable="false"/>

        <EditText
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="0.50"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="15dp"

            android:textColor="@color/total_theme"
            android:background="#ccffffff"

            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="100dp"
            android:id="@+id/discription"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Use camera to take photos"
            android:textColor="@color/total_theme"
            android:editable="false"
            android:textSize="15dp"
            android:layout_marginTop="-100dp"
            android:onClick="photoClickou"
            />




        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"

            android:layout_height="34dp"
            android:layout_width="150dp"

            android:text="Submit"
            android:gravity="center"
            android:id="@+id/button"
            android:background="@drawable/lasthope_button"

            android:textSize="18sp"
            android:textColor="@color/total_theme"

            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="5dp"

            android:layout_gravity="center"
            android:onClick="submitClickHandler"

            />


    </LinearLayout>

</RelativeLayout>
